<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMS Consulting </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container">

                <a class="navbar-brand" asp-area="" asp-controller="Home" style="color:white; padding-right:40px" asp-action="Index">CMS Computer Solutions</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!--set up navbar CMS 12/16/2020-->
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                @{ if (ViewBag.ID == 1)
                                    {
                                        <a id="navIndex" style="background-color:#595959; color:black;" class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>

                                    }
                                    else
                                    {
                                        <a id="navIndex" class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    }
                                }
                            <li class="nav-item">
                                @{ if (ViewBag.ID == 2)
                                    {
                                        <a id="navPrivacy" style="background-color:#595959;" class="nav-link active" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                    }
                                    else
                                    {
                                        <a id="navPrivacy" class="nav-link text-light active" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                    }
                                }
                            </li>
                            <li class="nav-item">
                                @{ if (ViewBag.ID == 3)
                                    {
                                        <a id="navContact" style="background-color:#595959;" class="nav-link active" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                                    }
                                    else
                                    {
                                        <a id="navPrivacy" class="nav-link text-light active" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                                    }
                                }
                            </li>
                        </ul>
                    </div>
            </div>
        </nav>
    </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2020 - CMSComputersASPCORE - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
    </body>
    </html>
